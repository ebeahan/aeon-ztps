{
  "variables": {
    "ssh_name": "vagrant",
    "ssh_pass": "vagrant",
    "hostname": "aeon-ztps",
    "home": "{{ env `HOME`}}"
  },

  "provisioners": [
    {
      "type": "ansible",
      "playbook_file": "../../install/via-ansible.yml",
      "extra_arguments": [ "--extra-vars", "packer=True dhcp_cidr=192.168.59.254/24 dhcp_gateway=192.168.59.1" ]
    }
  ],

  "builders": [
    {
    "type": "virtualbox-ovf",
    "vm_name": "aeon-ztps",
    "headless": true,
    "vboxmanage": [
      ["modifyvm", "{{.Name}}", "--nictype0", "virtio"],
      ["modifyvm", "{{.Name}}", "--memory", "1024"]
    ],

    "source_path": "{{ user `home` }}/.vagrant.d/boxes/ubuntu-VAGRANTSLASH-trusty64/20161109.0.0/virtualbox/box.ovf",
    "ssh_username": "{{user `ssh_name`}}",
    "ssh_password": "{{user `ssh_pass`}}",
    "ssh_wait_timeout": "20m",

    "shutdown_command": "echo {{user `ssh_pass`}} | sudo -S shutdown -P now"
  }
  ]
}