auto {{ item.key }}
{% if item.value.dhcp is defined %}
iface {{ item.key }} inet dhcp
{% else %}
iface {{ item.key }} inet static
    address {{ item.value.address }}
{% if item.value.netmask is defined %}
    netmask {{ item.value.netmask }}
{% endif %}
{% if item.value.gateway is defined %}
    gateway {{ item.value.gateway }}
{% endif %}
{% if item.value.metric is defined %}
    metric {{ item.value.metric }}
{% if item.value.dns_nameservers is defined %}
    dns-nameservers {{ item.value.dns_nameservers }}
{% endif %}
{% endif %}
{% endif %}
